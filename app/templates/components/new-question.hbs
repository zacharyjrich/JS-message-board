{{#if addNewQuestion}}
<h4>Add Your Question</h4>
  <div>
    <form {{action 'saveQuestion' on='submit'}}>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" required="required" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="note">Notes:</label>
        {{input value=note id="note" required="required" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="content">Question:</label>
        {{input value=content id="content" required="required" class="form-control"}}
      </div>

      <button class="btn btn-warning">Save</button>
      <br><br>
    </form>
  </div>
{{else}}
  <button class="btn btn-warning" {{action 'questionFormShow'}}>Add a question here!</button>
  <br><br>
{{/if}}
