{{#if addNewQuestion}}
<h1>Add a question!</h1>
<div>
  <form {{action 'saveQuestion' on='submit'}}>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" required="required"}}
    </div>

    <div class="form-group">
      <label for="note">Note</label>
      {{input value=note id="note" required="required"}}
    </div>

    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question" required="required"}}
    </div>

    <button>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'postQuestionShow'}}>New Question</button>
{{/if}}
