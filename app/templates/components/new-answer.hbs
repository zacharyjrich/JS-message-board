{{#if addNewAnswer}}
<h4>Add Your Answer</h4>
  <div>
    <form{{action 'saveAnswer' on='submit'}}>
      <div class="form-group">
        <label for="name">Name:</label>
        {{input value=name id="name" required="required" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="body">Answer:</label>
        {{input value=body id="body" required="required" class="form-control"}}
      </div>

      <button class="btn btn-warning">Save</button>
    </form>
  </div>
{{else}}
  <button id="answer-button" class="btn btn-warning" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
