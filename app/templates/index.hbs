<h3 class="text-center">Questions here</h3>

{{new-question saveQuestion="saveQuestion"}}

<div class="index-question-model">
  {{#each model.questions as |question|}}
    {{question-tile question=question}}
  {{/each}}
</div>

<div class="index-answer-model">
  {{#each model.answers as |answer|}}
    <p>{{answer.author}}</p>
    <p>{{answer.body}}</p>
  {{/each}}
</div>

